<idea-plugin version="2">
    <id>stepic.submmit.plugin.id</id>
    <name>Stepic connector -alpha-</name>
    <version>1.0</version>
    <vendor email="afnm47@gmail.com" url="https://stepic.org">YourCompany</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceInterface="main.stepicConnector.WorkerService"
                            serviceImplementation="main.stepicConnector.WorkerService"/>
        <projectService serviceInterface="main.stepicConnector.WS2"
                            serviceImplementation="main.stepicConnector.WS2"/>
        <projectService serviceInterface="main.stepicConnector.WS3"
                            serviceImplementation="main.stepicConnector.WS3"/>

        <moduleBuilder builderClass="main.projectWizard.StepicModuleBuilder"
                       id="STEPIC_MODULE_BUILDER"
                       order="first"/>

        <moduleType id="STEPIC_MODULE_TYPE"
                    implementationClass="main.projectWizard.StepicModuleType"/>


    </extensions>

    <actions>
        <!--<group id="Stepic" text="Custom Action Group" popup="true">-->
            <!--<add-to-group group-id="NewGroup" anchor="last"/>-->
            <!--<action class="main.actions.PrintMapInfo" id="ID.PrintMapInfo"-->
                    <!--text="asd"-->
                    <!--description="asd"/>-->
        <!--</group>-->
        <!--<group id="Stepic2" text="Custom Action Group" popup="true">-->
            <!--<add-to-group group-id="MainToolBar" anchor="last"/>-->
            <!--<action class="main.actions.PrintMapInfo" id="ID.PrintMapInfo"-->
                    <!--text="asd"-->
                    <!--description="asd"/>-->
        <!--</group>-->
        <!-- Add your actions here -->
        <action id="WhoAmI" class="main.actions.WhoAmI" text="_Who am i" description="return username">
            <!--<add-to-group group-id="Stepic" anchor="first"/>-->
            <add-to-group group-id="OtherMenu" anchor="first"/>
        </action>
        <action id="sing in" class="main.actions.SingIn" text="Sing _in" description="Incert your client and secret id">
            <add-to-group group-id="OtherMenu" anchor="first"/>
        </action>
        <action id="ID.SendFile"
                class="main.actions.SendFile"
                text="Send Step"
                description="Send task to Stepic"
                icon="/icons/stepic_logo_green.png">
            <add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first"/>
        </action>
        <action id="ID.PrintMapInfo" class="main.actions.PrintMapInfo" text="PrintMapInfo" description="PrintMapInfo">
            <add-to-group group-id="OtherMenu" anchor="first"/>
        </action>
        <!--<action id="ID.GetIdStep" class="main.actions.GetIdStep" text="GetIdStep" description="GetIdStep">-->
        <!--<add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>-->
        <!--</action>-->
        <action id="ID.GetStepStatus"
                class="main.actions.GetStepStatus"
                text="GetStepStatus"
                description="GetStepStatus"
                icon="AllIcons.General.TodoQuestion">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>
        </action>
    </actions>

    <module-components>
        <component>
            <implementation-class>main.components.MyModuleComponent</implementation-class>
        </component>
    </module-components>
    <project-components>
        <component>
            <implementation-class>main.components.MyProjectComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>