<idea-plugin version="2">
    <id>stepic.submmit.plugin.id</id>
    <name>Stepic connector -alpha-</name>
    <version>1.0</version>
    <vendor email="afnm47@gmail.com" url="https://stepic.org">YourCompany</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceInterface="main.stepicConnector.WorkerService"
                            serviceImplementation="main.stepicConnector.WorkerService"/>

        <moduleBuilder builderClass="main.projectWizard.StepicModuleBuilder"
                       id="STEPIC_MODULE_BUILDER"
                       order="first"/>

        <moduleType id="STEPIC_MODULE_TYPE"
                    implementationClass="main.projectWizard.StepicModuleType"/>


    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="WhoAmI" class="main.actions.WhoAmI" text="_Who am i" description="return username">
            <add-to-group group-id="OtherMenu" anchor="first"/>
        </action>
        <action id="sing in" class="main.actions.SingIn" text="Sing _in" description="Incert your client and secret id">
            <add-to-group group-id="OtherMenu" anchor="first"/>
        </action>
        <action id="ClientInfo" class="main.actions.ClientInfo" text="get client _info"
                description="return client_id and client_secret">
            <add-to-group group-id="OtherMenu" anchor="last"/>
        </action>
        <action id="id.SendMain" class="main.actions.SendMain" text="_Send main"
                description="Send to Stepic file which call &quot;main&quot;">
            <add-to-group group-id="OtherMenu" anchor="first"/>
        </action>
        <action id="id.GetCourse" class="main.actions.GetCourse" text="Choose a course"
                description="imput a cousre URL to choose course">
            <add-to-group group-id="OtherMenu" anchor="last"/>
        </action>
        <action id="id.ProjectBuilder" class="main.actions.ProjectBuilder" text="test Project Builder"
                description="test Project Builder">
            <add-to-group group-id="OtherMenu" anchor="last"/>
        </action>
        <action id="ID.SendFile" class="main.actions.SendFile" text="Send it" description="Send the file ti Stepic">
            <add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first"/>
        </action>
    </actions>

</idea-plugin>