<idea-plugin version="2">
    <id>stepic.submmit.plugin.id</id>
    <name>Stepic Java submitter -beta-</name>
    <version>0.42</version>
    <vendor email="afnm47@gmail.com" url="https://stepic.org"> Stepic </vendor>

    <description><![CDATA[
      Stepic plugin for code challenges on Java.<br>
      To use this plugin you have to have Stepic account and follow the course.<br>
      <br>
      It used Yandex.Translator to translate lesson names on Russian to package names on English.<br>
    ]]></description>

    <!--<change-notes><![CDATA[-->
      <!--Add change notes here.<br>-->
      <!--<em>most HTML tags may be used</em>-->
    <!--]]>-->
    <!--</change-notes>-->

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="131.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceInterface="main.stepicConnector.WorkerService"
                            serviceImplementation="main.stepicConnector.WorkerService"/>
        <projectService serviceInterface="main.stepicConnector.WS2"
                            serviceImplementation="main.stepicConnector.WS2"/>
        <projectService serviceInterface="main.stepicConnector.WS3"
                            serviceImplementation="main.stepicConnector.WS3"/>

        <moduleBuilder builderClass="main.projectWizard.StepicModuleBuilder"
                       id="STEPIC_MODULE_BUILDER"
                       order="first"/>

        <moduleType id="STEPIC_MODULE_TYPE"
                    implementationClass="main.projectWizard.StepicModuleType"/>

        <projectStructureDetector implementation="main.projectWizard.StepicProjectStructureDetector" order="first"/>


    </extensions>

    <actions>
        <group id="ID.StepicGroup" text="_Stepic" popup="true">
            <add-to-group group-id="MainMenu" anchor="last"/>
        </group>

        <!-- Add your actions here -->
        <action id="ID.SendFile"
                class="main.actions.popupMenu.SendFile"
                text="Submit Solution"
                description="Send your solution to Stepic"
                icon="/icons/stepic_logo_green.png">
            <add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first"/>
        </action>

        <action id="ID.GetStepStatus"
                class="main.actions.popupMenu.GetStepStatus"
                text="Check Step Status"
                description="Get status of the step (e.g. wrong/correct)"
                icon="AllIcons.General.TodoQuestion">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>
        </action>

        <action id="WhoAmI" class="main.actions.mainMenu.WhoAmI" text="_Who am i" description="return username">
            <add-to-group group-id="ID.StepicGroup" anchor="first"/>
        </action>
        <action id="Sing in" class="main.actions.mainMenu.SingIn" text="Sing _in" description="Incert your client and secret id">
            <!--<add-to-group group-id="ID.StepicGroup" anchor="first"/>-->
        </action>
        <action id="ID.Update"
                class="main.actions.mainMenu.UpdateCourse"
                text="Update Course"
                description="Update this course">
            <add-to-group group-id="ID.StepicGroup" anchor="first"/>
        </action>

        <action id="ID.RefreshMap" class="main.actions.mainMenu.RefreshMap" text="Refresh Map" description="Refresh Map">
            <add-to-group group-id="ID.StepicGroup" anchor="first"/>
        </action>
        <action id="ID.DownloadLastSubmission"
                class="main.actions.popupMenu.DownloadLastSubmission"
                text="Download Latest Submission"
                description="Download your latest submission from Stepic">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>
        </action>

        <action id="ID.TEST.SomeAction"
                class="main.actions.mainMenu.SomeAction"
                text="SomeAction"
                description="SomeAction">
            <!--<add-to-group group-id="ID.StepicGroup" anchor="first"/>-->
        </action>

        <!--###########################################################################-->
        <action id="ID.PrintMapInfo"
                class="main.actions.mainMenu.PrintMapInfo"
                text="PrintMapInfo" description="PrintMapInfo">
            <!--<add-to-group group-id="ID.StepicGroup" anchor="first"/>-->
        </action>
        <action id="TEST.NegTranslator" class="main.actions.mainMenu.NegTranslator" text="NegTranslator"
                description="NegTranslator">
            <!--<add-to-group group-id="ID.StepicGroup" anchor="first"/>-->
        </action>
        <action id="ID.GetIdStep"
                class="main.actions.popupMenu.GetIdStep"
                text="GetIdStep"
                description="GetIdStep">
            <!--<add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first"/>-->
            <!--<add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>-->
        </action>

    </actions>

    <module-components>
        <component>
            <implementation-class>main.components.MyModuleComponent</implementation-class>
        </component>
    </module-components>
    <project-components>
        <component>
            <implementation-class>main.components.MyProjectComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>
